{
  "name": "personal-website-angular",
  "version": "0.0.6",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --configuration=development",
    "build:prod": "ng build --configuration=production",
    "build:dev": "ng build --configuration=development",
    "build:staging": "ng build --configuration=staging",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --no-watch --no-progress --code-coverage",
    "lint": "ng lint --max-warnings 0",
    "compodoc": "npx compodoc -p tsconfig.doc.json --theme=readthedocs --name=Documentation --hideGenerator --toggleMenuItems ['all']",
    "compodoc-coverage": "npx compodoc -p tsconfig.doc.json --theme=readthedocs --name=Documentation --hideGenerator --toggleMenuItems ['all'] --coverageTest 100 --coverageMinimumPerFile 100 --coverageTestShowOnlyFailed",
    "compodoc-serve": "npx compodoc -p tsconfig.doc.json --theme=readthedocs --name=Documentation --hideGenerator --toggleMenuItems ['all'] --port 8081 -s -o",
    "version-patch": "npm version patch -m \"Patch to %%s\"",
    "version-minor": "npm version minor -m \"Minor to %%s\"",
    "version-major": "npm version major -m \"Major to %%s\""
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.0.0",
    "@angular/cdk": "^15.0.2",
    "@angular/common": "^15.0.0",
    "@angular/compiler": "^15.0.0",
    "@angular/core": "^15.0.0",
    "@angular/forms": "^15.0.0",
    "@angular/material": "^15.0.2",
    "@angular/platform-browser": "^15.0.0",
    "@angular/platform-browser-dynamic": "^15.0.0",
    "@angular/router": "^15.0.0",
    "@compodoc/compodoc": "^1.1.21",
    "@types/node": "^20.6.3",
    "edge-launcher": "^1.2.2",
    "hammerjs": "^2.0.8",
    "lint-staged": "^13.2.2",
    "prettier-plugin-jsdoc": "^0.4.2",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.3",
    "@angular-eslint/builder": "15.1.0",
    "@angular-eslint/eslint-plugin": "15.1.0",
    "@angular-eslint/eslint-plugin-template": "15.1.0",
    "@angular-eslint/schematics": "15.1.0",
    "@angular-eslint/template-parser": "15.1.0",
    "@angular/cli": "~15.0.3",
    "@angular/compiler-cli": "^15.0.0",
    "@types/hammerjs": "^2.0.41",
    "@types/jasmine": "~4.3.0",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "@typescript-eslint/parser": "5.44.0",
    "eslint": "^8.28.0",
    "husky": "^8.0.3",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^2.1.2",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "karma-sabarivka-reporter": "^3.3.1",
    "karma-safari-launcher": "^1.0.0",
    "typescript": "~4.8.2"
  }
}
